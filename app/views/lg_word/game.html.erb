<h1>Welcome to the longest word-game !</h1>
<h2>Here is your grid : <%= @grid_space %></h2>
<form action="/score" method="get">
  <label for="question">What's your best shot ?</label>
  <input type="hidden" name="grid" value="<%= @grid_raw %>">
  <input type="hidden" name="start_time" value="<%= @start_time %>">
  <input type="text" id="question" name="attempt" placeholder="Enter your word here...">
  <input type="submit" value="Try">
</form>
